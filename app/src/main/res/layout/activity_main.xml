<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbmusic">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.6"/>

    <RelativeLayout
    android:id="@+id/layout_currentsong"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <TextView
        android:id="@+id/tv_current_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="85dp"
        android:textColor="#04b3d2"
        android:textSize="28.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Hello India MYSelf Saud Ahmed and they said"/>

    <Button
        android:id="@+id/btn_play_current"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/play"/>

</RelativeLayout>


    <RelativeLayout
    android:layout_below="@id/layout_currentsong"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
    android:id="@+id/lv_songlistview"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    >
    </ListView>


</RelativeLayout>

</RelativeLayout>
